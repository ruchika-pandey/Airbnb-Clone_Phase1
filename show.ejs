<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Listing Details</h3>
  </div>
<div class="card col-6 offset-3 show-card">

  <img src="<%= listing.image.url %>"
  class="card-img-top show-img"
    alt="listing_image">


  <div class="card-body">
  <p class="card-text">
  <b><%= listing.title %></b> <br>
  <%= listing.description %> <br>
  &#8377;<%= listing.price != null ? listing.price.toLocaleString("en-IN") : 'N/A' %> <br>
  <%= listing.location %> <br>
  <%= listing.country %>
</p>
  </div>
</div>


  <br/>
  <br/><br/>
  <div class="mt-3 d-flex gap-3 justify-content-center align-items-center">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-delete-btn">Edit</a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-danger edit-delete-btn">Delete</button>
    </form>
  </div>
</div>